<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_label" />

    <Button
        android:id="@+id/btnMultiThreading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/multithreading_label" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/network_login_label" />

    <Button
        android:id="@+id/btnNetWorkCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/network_call_recycler_view_label" />

</LinearLayout>